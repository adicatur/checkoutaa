<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_drug"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/circle_blue"
        android:src="@color/colorPrimary" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/circle_blue"
        android:layout_width="12dp"
        android:layout_height="12dp"></LinearLayout>

    <TextView
        android:id="@+id/drugs_name"
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_drug"
        android:text="Amoxilin 250 mg" />

    <TextView
        android:id="@+id/unit_drug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drugs_name"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="11dp"
        android:text="x3 Strips"
        android:textColor="@color/text_gray" />

    <TextView
        android:id="@+id/cash_on_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drugs_name"
        android:layout_marginRight="20dp"
        android:layout_marginTop="11dp"
        android:gravity="right"
        android:layout_marginBottom="13dp"
        android:text="Cash On Delivery"
        android:textColor="@color/cash_gray"
        android:textSize="14sp" />
</RelativeLayout>